{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "red_flags.schema.json",
  "title": "Red Flags Summary Output",
  "type": "object",
  "required": ["categories", "overall"],
  "properties": {
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "items", "category_risk_summary", "category_score"],
        "properties": {
          "name": {"type": "string"},
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["description", "severity", "citation"],
              "properties": {
                "description": {"type": "string"},
                "severity": {"type": "string"},
                "citation": {"type": "array", "items": {"type": "string"}},
                "confidence": {"type": "string", "enum": ["High", "Medium", "Low"]},
                "recommended_action": {"type": "string"}
              }
            }
          },
          "category_risk_summary": {"type": "string"},
          "category_score": {"type": "integer", "minimum": 1, "maximum": 5}
        }
      }
    },
    "overall": {
      "type": "object",
      "required": ["top_red_flags", "risk_heatmap", "mitigation_priorities", "summary"],
      "properties": {
        "top_red_flags": {"type": "array", "items": {"type": "string"}},
        "risk_heatmap": {"type": "object", "additionalProperties": {"type": "string"}},
        "mitigation_priorities": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["risk", "priority", "owner"],
            "properties": {
              "risk": {"type": "string"},
              "priority": {"type": "integer", "minimum": 1},
              "owner": {"type": "string"}
            }
          }
        },
        "summary": {"type": "string"}
      }
    }
  }
}
